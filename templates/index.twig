{% extends "_layout" %}

{% block content %}
  <section class="news-section">
  
  {% set entries = craft.entries().section('homepage').limit(3).all() %}

    {% for entry in entries %}
      <article>
        <picture>
        <source media="(max-width:959px)" srcset="{{ entry.bannerImage.one().url('banner') }}">
        <source media="(min-width:960px)" srcset="{{ entry.bannerImage.one().url('thumbnail') }}">
          <img src="{{entry.bannerImage.one().url('banner')}}" alt="">
        </picture>
          <div>
            <h2><a href="{{entry.url}}">{{entry.title}}</a></h2>
            <p>{{entry.introText}}</p>
            <p>{{entry.fullText}}</p>
            <a href="{{entry.url}}">see more</a>
          </div>
      </article>
  {% endfor %}
      <a class="button btn-more" href="news">More News</a>
  </section>
{% endblock %}