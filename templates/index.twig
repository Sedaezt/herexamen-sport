{% extends "_layout" %}

{% block content %}
   <section class="header-section">
    <h1 style="font-size: 32px; text-align: left; ">Welcome to Fit&Active</h1>

   <section class="news-section">
    {% set entries = craft.entries().section('homepage').all %}
    {% for entry in entries %}
      <article>
        <picture>
          {% set bannerImage = entry.bannerImage.one() %}
          {% if bannerImage %}
            {# <source media="(max-width:959px)" srcset="{{ bannerImage.url('banner') }}">
            <source media="(min-width:960px)" srcset="{{ bannerImage.url('thumbnail') }}">  #}
             <img src="{{ bannerImage.url('banner') }}" alt=""> 
          {% endif %}
        </picture>
        <div>
          <h2><a href="{{ url('sport') }}">{{ entry.title }}</a></h2>
          <p>{{ entry.introText }}</p>
          <p>{{ entry.fullText }}</p>
        </div>
      </article>
    {% endfor %}   
     </section>    

    
    {% include "categories/_allhomepage.twig" %}


{% endblock %} 